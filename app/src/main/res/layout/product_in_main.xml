<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--Product image in MainActivity-->
        <ImageView
            android:id="@+id/imgProductMain"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <!--Product description in MainActivity-->
        <TextView
            android:id="@+id/descriptionMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minHeight="50dp"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Product price in MainActivity-->
            <TextView
                android:id="@+id/priceMain"
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24.000"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <!--Icon Add to Cart-->
            <ImageView
                android:id="@+id/iconAddToCart"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_add_shopping_cart_24"
                app:tint="@color/blue_popular" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

